<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<GridPane fx:controller="BackgroundThreads.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Button text="Get Employees Names" onAction="#buttonPressed" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ListView GridPane.rowIndex="1" GridPane.columnIndex="0" fx:id="listView"/>
    <ProgressBar fx:id="progressBar" GridPane.rowIndex="2" GridPane.columnIndex="0" visible="false"/>
    <Label fx:id="progressLabel" GridPane.columnIndex="0" GridPane.rowIndex="3" visible="false"/>
</GridPane>